<UserControl x:Class="DistribuidoraWandall.Components.MenuPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DistribuidoraWandall.Components"
        xmlns:dotNetKitControls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
             mc:Ignorable="d">
    <Grid Name="gridMenu" Background="#FF2D2D30" >
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="15" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Name="Usuario"/>
        <Button Grid.Row="2" Margin="5,5,5,5" Name="Pedido">Pe</Button>
        <Button Grid.Row="3" Margin="5,5,5,5" Name="Produto">Pr</Button>
        <Button Grid.Row="4" Margin="5,5,5,5" Name="Cliente">Cl</Button>
        <Button Grid.Row="5" Margin="5,5,5,5" Name="Relatorio">Re</Button>
    </Grid>
</UserControl>
